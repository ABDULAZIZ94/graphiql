{
  "packages": ["packages/*", "packages/graphiql-examples/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": [
        "master"
      ],
      "preDistTag": "next"
    },
    "version": {
      "ignore-changes": "'__tests__' '**/*.spec.js' '**/*.spec.js' '**/*.spec.ts'",
      "allowBranch": ["master"],
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits",
      "createRelease": "github"
    }
  }
}
